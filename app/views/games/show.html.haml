- board = @game.boards.find_by(owner: 'Computer')
.show
  .row
    .col-md-6
      %h1 Computer
      %table.grid
        - Board.unflat_grid.each do |row|
          %tr
            - row.each do |space|
              - html_class = 'boat' if space.in?(board.current_occupied_spaces)
              - html_class = 'hit' if space.in?(board.hit_spaces)
              - html_class = 'guessed' if space.in? board.guessed_spaces
              %td.space{class: html_class}
                - guess = space.join('')
                = link_to guess, guess_game_path(@game, guess: guess), class: 'fire', method: :post
  %br
  %br
  - human_board = @game.boards.find_by owner: 'Computer'
  .row
    .col-md-12
      %h1 YOUR BOARD
      %table.grid
        - Board.unflat_grid.each do |row|
          %tr
            - row.each do |space|
              %td.space{class: ('boat' if space.join('').in? human_board.current_occupied_spaces)}
                = link_to space.join(''), guess_game_path(@game), method: :post
