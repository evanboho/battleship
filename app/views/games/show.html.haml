- board = @game.boards.find_by(owner: 'Human')
.show
  .row-fluid
    .col-md-6
      %table.grid
        - Board.unflat_grid.each do |row|
          %tr
            - row.each do |space|
              %td.space{class: ('boat' if space.in?(board.current_occupied_spaces))}
                - guess = space.join('')
                = link_to guess, guess_game_path(@game, guess: guess), class: 'fire', method: :post
    .col-md-6
      %h3 Boats
      %ul
        - Boat.all.each do |boat|
          %li #{boat.name}: #{boat.size}



