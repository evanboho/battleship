.setup
  .row-fluid
    .col-md-6
      %table.grid
        - Board.unflat_grid.each do |row|
          %tr
            - row.each do |space|
              %td.space{class: ('boat' if space.in?(@game.boards.find_by(owner: 'Human').current_occupied_spaces))}= space.join ''

    .col-md-6
      %h3 Boats
      %ul
        - Boat.all.each do |boat|
          %li.setup-boat{data: { size: boat.size, name: boat.name }} #{boat.name}: #{boat.size}



